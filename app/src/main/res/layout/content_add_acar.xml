<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.adminpc.honda.locatemycar.AddACar"
    tools:showIn="@layout/activity_add_acar"
    android:background="@drawable/hondaback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/button"
        android:background="@drawable/allbuttons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="365dp"
            android:layout_height="165dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="189dp"
            android:background="@drawable/addacar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Request Enquiry"
        android:id="@+id/button"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60dp"
        android:layout_alignParentStart="true" />
</RelativeLayout>
